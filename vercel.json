{
  "version": 2,
  "builds": [
    { 
      "src": "server/app.js", 
      "use": "@vercel/node",
      "config": {
        "buildCommand": "cd server && npm install",
        "includeFiles": [
          "server/public/**",
          "server/lib/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/app.js" },
    { "src": "/public/(.*)", "dest": "server/public/$1" },
    { "src": "/(.*)", "dest": "server/app.js" }
  ],
  "functions": {
    "server/app.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000"
  }
}