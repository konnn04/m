{
  "version": 2,
  "builds": [
    { 
      "src": "server/app.js", 
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/public/(.*)", "dest": "/public/$1" },
    { "src": "/(.*)", "dest": "server/app.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}