{
  "version": 2,
  "builds": [
    { 
      "src": "server/app.js", 
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build",
        "includeFiles": [
          "server/public/**",
          "server/lib/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/app.js" },
    { "src": "/public/(.*)", "dest": "server/public/$1" },
    { "src": "/(.*)", "dest": "server/app.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}