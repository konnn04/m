{
  "version": 2,
  "builds": [
    { 
      "src": "server/app.js", 
      "use": "@vercel/node",
      "config": {
        "buildCommand": "cd server && npm install",
        "includeFiles": [
          "public/**",
          "lib/**"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/app.js" },
    { "src": "/public/(.*)", "dest": "/public/$1" },
    { "src": "/(.*)", "dest": "/app.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}